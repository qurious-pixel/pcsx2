RUN\
	cd /tmp && \
	curl -sLO https://github.com/NixOS/patchelf/releases/download/0.12/patchelf-0.12.tar.bz2 && \
	tar xvf patchelf-0.12.tar.bz2 && \
	cd patchelf-0.12*/ && \
	./configure && \
	make && make install

